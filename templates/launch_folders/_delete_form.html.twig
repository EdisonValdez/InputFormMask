<form method="post" action="{{ path('launch_folders_delete', {'id': launch_folder.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ launch_folder.id) }}">
    <button class="btn">Delete</button>
</form>
